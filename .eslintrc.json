{
  "plugins": ["prettier"],
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier" // Integrates Prettier with ESLint
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": [
    "/node_modules/",
    "/.next/",
    "/build",
    ".next",
    "next-env.d.ts",
    "public",
    "package-lock.json"
  ]
}
